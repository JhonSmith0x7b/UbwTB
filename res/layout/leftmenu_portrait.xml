<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/mrl"
    android:background="@android:color/transparent">
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:id="@+id/rl">
        <com.jhonsmith.ubwtb.myviews.RoundImage 
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/img"
            android:src="@drawable/example_headportrait"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:text="@string/test_username"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/img"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <ListView 
        android:id="@+id/lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"></ListView>
	<LinearLayout 
	    android:id="@+id/ll"
	    android:layout_width="wrap_content"
	    android:layout_height="100dp"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal">
		<Button 
		    android:id="@+id/llbtn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/barsetting_button"
		    android:text="@string/barsetting_button"
		    android:textColor="#ffffff"
		    android:textSize="14sp"/>
		<Button 
		    android:id="@+id/llbtn1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/barsetting_button"
		    android:text="@string/theme_trigger"
		    android:textColor="#ffffff"
		    android:textSize="14sp"/>	    
	</LinearLayout>
</RelativeLayout>
